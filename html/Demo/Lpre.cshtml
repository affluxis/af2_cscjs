<script src="~/js/demo.js"></script>
<section class="page-title-area bg-cover1">
    <div class="page-title-wrapper section-spacing">
        <div class="page-title text-center white-text">
            <h1 class="heading-1">Demo Live</h1>
        </div>
    </div>
</section>
<section class="blog-area bg-color1">
    <div class="blog-wrapper section-spacing" style="padding-top:30px;">
        <div class="container">
            <div class="error-page text-center">
                <a id="ls" href="#" class="btn-style3">Start</a>
                <br />
                <span>Click "Start" to start live streaming.</span>
                <br /><br />
                <input id="ljt" maxlength="5" placeholder="Token" />
                <a id="lj" href="javascript:onJoin();" autocapitalize="none" autocorrect="off" autocomplete="off" class="btn-style3">Join</a>
                <br />
                <span>Click "Join" to join live streaming.</span>
                <br /><br />
                <input id="ljv" maxlength="5" placeholder="Token" />
                <a id="lv" href="javascript:onView();" autocapitalize="none" autocorrect="off" autocomplete="off" class="btn-style3">View</a>
                <br />
                <span>Click "View" to view live streaming.</span>
            </div>
        </div>
    </div>
</section>
<script>
    var id = getRnd(5);

    $(function () {
        $('#ls').attr('href', '/demo/lp/' + id);
    });
    function onJoin() {
        var str = $('#ljt').val().trim();
        if(str === '') {
            alert('Token required.');
            return;
        }
        window.location.href = '/demo/lp/' + str.toLowerCase();
    }
    function onView() {
        var str = $('#ljv').val().trim();
        if (str === '') {
            alert('Token required.');
            return;
        }
        window.location.href = '/demo/lv/' + str.toLowerCase();
    }
</script>
