<script src="~/js/demo.js"></script>
<section class="page-title-area bg-cover1">
    <div class="page-title-wrapper section-spacing">
        <div class="page-title text-center white-text">
            <h1 class="heading-1">Demo AVChat</h1>
        </div>
    </div>
</section>
<section class="blog-area bg-color1">
    <div class="blog-wrapper section-spacing" style="padding-top:30px;">
        <div class="container">
            <div class="error-page text-center">
                <a id="avs" href="#" class="btn-style3">Start</a>
                <br />
                <span>Click "Start" to start audio/video chat.</span>
                <br /><br />
                <input id="avjt" maxlength="5" placeholder="Token" />
                <a id="avj" href="javascript:onJoin();" autocapitalize="off" autocorrect="off" autocomplete="off" class="btn-style3">Join</a>
                <br />
                <span>Click "Join" to join audio/video chat.</span>
            </div>
        </div>
    </div>
</section>
<script>
    var id = getRnd(5);

    $(function () {
        $('#avs').attr('href', '/demo/avp/' + id);
    });
    function onJoin() {
        var str = $('#avjt').val().trim();
        if(str === '') {
            alert('Token required.');
            return;
        }
        window.location.href = '/demo/avp/' + str.toLowerCase();
    }
</script>
